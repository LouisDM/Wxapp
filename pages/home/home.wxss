.slide swiper {
  height: 400rpx;
}
.slide swiper image {
  height: 100%;
  width: 100%;
}
.board {
  display: flex;
  flex: 1;
  flex-direction: column;
  padding: 40rpx;
  box-sizing: border-box;
}
.board-item {
  display: flex;
  cursor: pointer;
  border: 1rpx solid #eee;
  margin-top: 30rpx;
  padding: 40rpx;
}
.board-item text {
  flex: 1;
}
.board-item image {
  height: 40rpx;
  width: 40rpx;
}
